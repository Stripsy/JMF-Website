<div class="container">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-4">
			</div>
			<div class="col-md-4">
				<form role="form" action="/admin/utilisateurs/update/{{user.idutilisateur}}" method="post">
					<div class="form-group">
						<h4>Edition de l'utilisateur</h4><br><br>
						<label for="exampleInputEmail1">
							Adresse mail
						</label>
						<input type="text" class="form-control" id="exampleInputEmail1" required name="mail" id="mail"
							value="{{user.mail}}" />
						<label for="exampleInputEmail1">
							Nom
						</label>
						<input type="text" class="form-control" id="exampleInputEmail1" required name="nom" id="nom"
							value="{{user.nom}}" />
						<label for="exampleInputEmail1">
							Prenom
						</label>
						<input type="text" class="form-control" id="exampleInputEmail1" required name="prenom"
							id="prenom" value="{{user.prenom}}" />
						<label for="exampleInputEmail1">
							Téléphone
						</label>
						<input type="text" class="form-control" id="exampleInputEmail1" required maxlength="10"
							name="telephone" id="telephone" value="{{user.telephone}}" />
						<label for="exampleInputEmail1">
							Rôle
						</label><br>
						<select name="role" id="role">
							<option value="">- Choix du rôle -</option>
							{{#each role}}
							<option value="{{this.idrole}}">{{this.nomrole}}</option>
							{{/each}}
						</select>
						<input id="id" name="id" type="hidden" value="{{user.idutilisateur}}">
					</div>

					<button type="submit" class="btn btn-primary">
						Modifier
					</button>
				</form>
			</div>
			<div class="col-md-4">
			</div>
		</div>
	</div>
</div>